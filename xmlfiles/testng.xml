<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceLabs Cross Browser Testing" parallel="tests" thread-count="3">

	<listeners>

		<listener class-name="listener.ReportListener"></listener>

	</listeners>
	
	 <test name="Chrome on Windows">
        <parameter name="browser" value="chrome" />
        <parameter name="version" value="latest" />
        <parameter name="platform" value="Windows 10" />
        <classes>
            <class name="testcases.LoginTest" />
        </classes>
    </test>

	 <test name="Firefox on Windows">
        <parameter name="browser" value="firefox" />
        <parameter name="version" value="latest" />
        <parameter name="platform" value="Windows 10" />
        <classes>
            <class name="testcases.LoginTest" />
        </classes>
    </test>
    
    
     <test name="Edge on Windows">
        <parameter name="browser" value="MicrosoftEdge" />
        <parameter name="version" value="latest" />
        <parameter name="platform" value="Windows 10" />
        <classes>
            <class name="testcases.LoginTest" />
        </classes>
    </test>
</suite> 
